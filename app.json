{
    "expo": {
        "name": "hotv_app",
        "slug": "hotv_app",
        "version": "1.0.0",
        "orientation": "portrait",
        "androidNavigationBar": {
            "barStyle": "light-content",
            "backgroundColor": "#141313"
        },
        "splash": {
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "updates": {
            "fallbackToCacheTimeout": 0
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "softwareKeyboardLayoutMode": "pan"
        },
        "web": {}
    }
}